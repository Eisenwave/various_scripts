units_volume = {
    "beerbarrel": 117.3478,
    
    "gallon_imperial": 4.54609,
    "gallons_imperial": 4.54609,
    
    "gallon_us": 3.7854,
    "gallons_us": 3.7854,
    
    "ml": 0.001,
    "milliletre": 0.001,
    "milliletres": 0.001,
    "cm3": 0.001,
    "cubic_centimeter": 0.001,
    
    "cl": 0.01,
    "centilitre": 0.01,
    "centilitres": 0.01,
    
    "dl": 0.1,
    "decilitre": 0.1,
    "decilitres": 0.1,
    
    "l": 1,
    "litre": 1,
    "litres": 1,
    "dm3": 1,
    "cubic_decimeter": 1,
    
    "m3": 1000,
    "cubic_meter": 1000
}

tables = [units_digital_storage, units_distance, units_mass, units_speed, units_volume]

if __name__ == "__main__":
    if len(sys.argv) < 4:
        print("Usage: <amount> <source-unit> <target-unit>")
        exit(1)
    
    source_name = sys.argv[2]
    target_name = sys.argv[3]
    
    for table in tables:
        if source_name in table:
            if target_name not in table:
                print("Incompatible target unit", file=sys.stderr)
                exit(1)
            source = table[sys.argv[2]]
            target = table[sys.argv[3]]
            break
    else:
        print("Unknown source unit", file=sys.stderr)
        exit(1)
    
    result = float(sys.argv[1]) * source / target
    int_result = int(result)
    print(result if result != int_result else int_result)
